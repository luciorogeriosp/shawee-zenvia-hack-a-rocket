@model int
<iframe id="iframeRemessaImprimir"
        name="iframeRemessaImprimir"
        title=""
        width="100%"
        height="300"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        src="@(Url.Action("ImprimirVisualizarPDF", "Remessa"))?IdRemessa=@Model"></iframe>
<script>
    function resizeIframeImprimir(){
        $("#iframeRemessaImprimir").css("height",  (parseInt($(window).height()) - 220) + "px");
    }

    resizeIframeImprimir();

    $(window).resize(function () {
        try {
            resizeIframeImprimir();
        } catch (e) {

        }
    });
</script>
