@model List<SAL.MVC.Areas.Tesouraria.Models.ContaModel>
@{
    Layout = null;
}
@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover" id="tblEfetivarContaListaContas" style="border-left:0; border-top:0; border-right:0;">
        <thead>
            <tr>
                <th class="text-center" width="20%" style="border:0">Conta</th>
                <th class="text-left" width="80%" style="border:0">Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="cursor:pointer;" onclick="EfetivarSelecionaConta(@item.Id, '@item.CodCont - @item.Nome');">
                    <td class="text-center">@item.CodCont</td>
                    <td>@item.Nome</td>
                </tr>
            }
        </tbody>
    </table>
    <input type="hidden" id="ListaContasNome" value="@Model[0].CodCont - @Model[0].Nome" />
    if (Model.Count == 1)
    {
        <script>
            if (EditarContaId == 0) {
                EfetivarSelecionaConta(@Model[0].Id, $("#ListaContasNome").val());
            }
        </script>
    }
}
else
{
<text>Não existem contas.</text>
}