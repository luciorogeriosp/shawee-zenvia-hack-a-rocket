@{
    bool IntegracaoSOA = true;
    if (Tropical.Infrastructure.Util.SessionData.SessionReader("IntegracaoSOA") != null)
    {
        IntegracaoSOA = ((bool)Tropical.Infrastructure.Util.SessionData.SessionReader("IntegracaoSOA"));
    }
}
<fieldset>
    <form class="smart-form" id="frmConsultaVisitante" autocomplete="off" onsubmit="return false;">
        <section>
            <label class="label"><label for="txtNomeVisitante">Nome Completo do Visitante</label></label>
            <label class="input">
                <input maxlength="30" class="form-control" id="txtNomeVisitante" name="txtNomeVisitante" onkeypress="OnEnter(event, 'SelecionarVisitante')" style="text-transform: uppercase" type="text" value="">
            </label>
        </section>
        <div class="row" @(Html.Raw(IntegracaoSOA ? " style='display:none;'" : ""))>
            <section class="col col-8">
                <label class="label"><label for="txtGLPVisitante">GLP do Visitante</label></label>
                <label class="input">
                    <input maxlength="30" class="form-control" id="txtGLPVisitante" name="txtGLPVisitante" onkeypress="OnEnter(event, 'SelecionarVisitante')" type="number" value="">
                </label>
            </section>
            <section class="col col-4">
                <label class="label">&nbsp;</label>
                <label class="checkbox"><input type="checkbox" id="cbVisitanteTOM" name="cbVisitanteTOM"><i></i>Membro TOM?</label>
            </section>
        </div>
        <div class="row" @(Html.Raw(IntegracaoSOA ? "" : " style='display:none;'"))>
            <section class="col" style="width:100%">
                <div class="alert alert-success fade in">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    Realize a recebedoria de membros através do Botão MEMBRO AMORC.
                </div>
            </section>
        </div>
    </form>
</fieldset>
