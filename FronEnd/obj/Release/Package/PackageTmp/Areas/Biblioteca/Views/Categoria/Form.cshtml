@model SAL.MVC.Areas.Biblioteca.Models.CategoriaModel
<div role="content">

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->
    <!-- widget content -->
    <div class="widget-body no-padding">

        <!-- Error states for elements -->
        <form class="smart-form" id="frmCategoria" onsubmit="$('#btnConfirmar').click(); return false;">
            @Html.HiddenFor(m => m.IdCategoria)
            <fieldset>
                <div class="row">
                    <section class="col col-3">
                        <label class="label">
                            @Html.LabelFor(m => m.CDD)
                        </label>
                        <label class="input">
                            @Html.TextBoxFor(m => m.CDD, new { style = "text-transform:uppercase;" })
                        </label>
                    </section>
                    <section class="col col-9">
                        <label class="label">
                            @Html.LabelFor(m => m.Nome)
                            <span class="font-xs text-danger">*</span>
                        </label>
                        <label class="input">
                            @Html.TextBoxFor(m => m.Nome, new { style = "text-transform:uppercase;" })
                        </label>
                    </section>
                </div>
                
            </fieldset>
        </form>
        <!--/ Error states for elements -->
    </div>
    <!-- end widget content -->
</div>
@Html.Raw(SAL.MVC.Helpers.Notify.JsNotify(Model.ReturnAttribute, "frmCategoria"))
@if (Model.IdCategoria == 0)
{
    <script>

    </script>
}
<script>
    $("#IdCategoria").val('@Model.IdCategoria');
</script>
@if (Model.ReturnAttribute.Status == SAL.MVC.Helpers.Constantes.StatusRetorno.Sucesso)
{
    <script>
         LoadList();
    </script>
}
<script>
    $("#btnConfirmar").removeAttr("disabled");
</script>