@model List<SAL.MVC.Areas.OrganismoAfiliado.Models.ComissaoModel>
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<table id="datatable_tabletools" class="table table-striped table-bordered table-hover">
    <caption id="btnComissaoExibirTudo" style="display:none;">
        <a class="btn btn-primary" href="javascript:void(0);" style="float:right; " onclick="ComissaoExibirTudo();">Exibir Tudo</a>
    </caption>
    <thead>
        <tr>
            <th class="text-center" style="width:100%" colspan="3">Selecione a Comissão</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            foreach (var itemFuncao in item.ListaFuncoes)
            {
                <tr id="RecepcaoItemComissao_@(item.Id)_@(itemFuncao.Id)">
                    <td class="text-left">@(item.Nome + (string.IsNullOrEmpty(itemFuncao.Nome) == false  ? " - " + itemFuncao.Nome : ""))</td>
                    <td class="text-left" style="width:5%">
                        @if (itemFuncao.PresencaMembroLancada)
                        {
                            <a href="javascript:void(0);" onclick="RecepcaoComissaoDescredenciar(@itemFuncao.COP_ID);" class="btn btn-danger"><i class="fa fa-trash-o"></i> Descredenciar </a>
                        }
                        else
                        {
                            <a href="javascript:void(0);" onclick="ComissaoCredenciar(@item.Id, @itemFuncao.Id, '@item.Nome', '@itemFuncao.Nome', 0);" class="btn btn-default"><i class="fa fa-edit"></i> Selecionar</a>
                        }                                               
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
