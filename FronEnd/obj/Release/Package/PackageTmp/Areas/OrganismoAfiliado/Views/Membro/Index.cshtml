<script>

    $(document).ready(function () {
        ExecutaFiltroMembroBusca();
    });

    function AtualizarListaMembro(Id) {
        $.ajax({
            type: 'POST',
            url: rootURL + 'OrganismoAfiliado/Membro/ListaLinha',
            data: { Id: Id },
            beforeSend: function () {

            },
            success: function (data) {
                $("#line_" + Id).html(data);
            },
            error: function (xhr, st, str) {
                ShowError(MsgNaoFoiPossivelCompletarOperacao);
            },
            complete: function () {

            }
        });
    }

</script>
