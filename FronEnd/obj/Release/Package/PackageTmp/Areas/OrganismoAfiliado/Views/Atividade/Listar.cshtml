        <tr>
            <th class="text-center">Dia</th>
            <th class="text-center">Horário</th>
            <th class="text-center">Atividade</th>
            <th class="text-center">Título</th>
            <th class="text-center">Responsável</th>
            <th class="text-center">Somente Membros</th>
            @if (ExibirBotoes)
            {
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            }
        </tr>
    </thead>
    <tbody>
