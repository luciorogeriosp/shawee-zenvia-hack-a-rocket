@model SAL.MVC.Models.RelatorioModel<List<SAL.MVC.Areas.OrganismoAfiliado.Models.RelatorioIniciacoesModel>>
<style>
    .page {
        padding-top: 25px;
    }

    .pageother {
        padding-top: -30px;
    }

    .titulo {
        font-size: 9pt;
        font-weight: bold;
    }

    .subtitulo {
        font-size: 7pt;
        font-weight: bold;
    }

    .texto {
        font-size: 9pt;
    }

    .textop {
        font-size: 9pt;
    }

    .texto-branco {
        font-size: 9pt;
        color: white;
    }

    .texto-left {
        text-align: left;
    }

    .texto-right {
        text-align: right;
    }

    .texto-center {
        text-align: center;
    }

    h1 {
        font-size: 12pt;
        text-align: center;
        font-weight: bold;
        padding: 0;
        margin: 0;
    }

    h2 {
        font-size: 10pt;
        text-align: center;
        font-weight: bold;
        padding: 0;
        margin: 0;
    }

    .nome {
        width: 400px;
    }

    .chave {
        width: 100px;
    }

    .tabela {
        border: 1px solid black;
    }

        .tabela th {
            border: 0.5px solid black;
        }

        .tabela td {
            border: 0.5px solid black;
        }
</style>
@if (Model.Dados != null)
{
    for (int i = 0; i < Model.Dados.Count; i++)
    {
        var item = Model.Dados[i];
        <div class="page">
            @*<h1>@Model.ReportTitle</h1>*@
            <h1>@Model.ReportSubitle</h1>
            @if (Model.Dados != null)
            {
                <table cellpadding="0" cellspacing="0" width="100%" border="0">
                    <tr>
                        <td class="espaco1">&nbsp;</td>
                    </tr>
                </table>
                <table cellpadding="4" cellspacing="0" width="100%" border="0" class="tabela">
                    <caption>
                        DATA: @(item.Data.ToString("dd/MM/yyyy"))<br />
                        INICIAÇÃO: @(item.Grau)<br />
                        MESTRE: @(item.Mestre)
                    </caption>
                    <thead>
                        <tr>
                            <td class="titulo texto-left nome">Nome</td>
                            <td class="titulo texto-center chave">Chave</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var itemParticipante in item.Participantes)
                        {
                            <tr>
                                <td class="texto texto-left nome">@itemParticipante.Nome</td>
                                <td class="texto texto-center chave">@itemParticipante.Chave</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        if (i < Model.Dados.Count - 1)
        {
            <div style="page-break-before:always">&nbsp;</div>
        }
    }
}
