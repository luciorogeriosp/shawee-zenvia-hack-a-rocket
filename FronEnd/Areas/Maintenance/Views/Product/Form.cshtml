@model FrontEnd.Areas.Maintenance.Models.ProductViewModel
<div role="content">

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->
    <!-- widget content -->
    <div class="widget-body no-padding">

        <!-- Error states for elements -->
        <form class="smart-form" id="frmProduct" onsubmit="$('#btnConfirmar').click(); return false;">
            @Html.HiddenFor(m => m.Id)
            <fieldset>
                <section>
                    <label class="label">
                        Categoria
                        <span class="font-xs text-danger">*</span>
                    </label>
                    <label class="select">
                        @Html.DropDownListFor(m => m.CategoryIdSelect, Model.CategoryList, "Selecione")
                        <i></i>
                    </label>
                </section>
                <section>
                    <label class="label">
                        Nome <span class="font-xs text-danger">*</span>
                    </label>
                    <label class="input">
                        @Html.TextBoxFor(m => m.Name, new { style = "text-transform:uppercase;" })
                    </label>
                </section>
                <section>
                    <label class="label">
                        Descrição
                    </label>
                    <label class="input">
                        @Html.TextBoxFor(m => m.Description, new { style = "text-transform:uppercase;" })
                    </label>
                </section>
                <section>
                    <label class="label">
                        URL Foto
                    </label>
                    <label class="input">
                        @Html.TextBoxFor(m => m.Photo)
                    </label>
                </section>
                <section>
                    <label class="label">
                        Preço <span class="font-xs text-danger">*</span>
                    </label>
                    <label class="input">
                        @Html.TextBoxFor(m => m.Price, new { style = "text-transform:uppercase;" })
                    </label>
                </section>
                <section>
                    <label class="label">
                        Preço Promocional
                    </label>
                    <label class="input">
                        @Html.TextBoxFor(m => m.PromotionPrice, new { style = "text-transform:uppercase;" })
                    </label>
                </section>
            </fieldset>
        </form>
        <!--/ Error states for elements -->
    </div>
    <!-- end widget content -->
</div>
@Html.Raw(FrontEnd.Helpers.Notify.JsNotify(Model.ReturnAttribute, "frmProduct"))
@if (Model.Id == 0)
{
    <script>

    </script>
}
<script>
    $("#IdAutor").val('@Model.Id');
</script>
@if (Model.ReturnAttribute.Status == FrontEnd.Helpers.Constantes.StatusRetorno.Sucesso)
{
    <script>
        LoadList();
    </script>
}
<script>
    $("#btnConfirmar").removeAttr("disabled");
</script>